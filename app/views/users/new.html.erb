<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |m| %>
            <li><%= m %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    <%= f.text_field :login %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.submit "Sign up" %>
<% end %>